<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_messages_imageView"
        android:layout_width="66dp"
        android:layout_height="67dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="5dp"
        tools:srcCompat="@tools:sample/avatars[0]" />

    <TextView
        android:id="@+id/name_messages_textView"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/img_messages_imageView"
        android:layout_toRightOf="@+id/img_messages_imageView"
        android:text="Name"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/surname_messages_textView"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/name_friends_textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="116dp"
        android:layout_marginRight="116dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/name_messages_textView"
        android:layout_toRightOf="@+id/name_messages_textView"
        android:text="Surname"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/message_messages_textView"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/img_messages_imageView"
        android:layout_toRightOf="@+id/img_messages_imageView"
        android:text="Message"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/time_messages_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_messages_imageView"
        android:layout_alignEnd="@+id/message_messages_textView"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="0dp"
        android:text="Time" />

</RelativeLayout>